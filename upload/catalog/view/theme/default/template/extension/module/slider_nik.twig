<div class="swiper-viewport">
  <div id="slidernik" class="swiper-container">
    <div class="swiper-wrapper"> 
      {% for slide in slides %}
        <div class="swiper-slide text-center">
          {% if slide.link %}
            <div style="background: no-repeat center center url('{{ slide.image }}'); background-size: cover; position: relative; height: {{ height }}px;">
              <div style="border: 3px solid black; border-radius: 4px; padding: 20px; position: absolute; top: {{ padding_top }}%; left: {{ padding_left }}%; color: black;">
                <p style="font-size: 45px; font-style: italic; margin-bottom: 45px;">{{ slide.name }}</p>
                <p style="font-size: 16px; margin-bottom: 100px;">{{ slide.text }}</p>
                <a href="{{ slide.link }}" target="_blank" style="background-color: black; padding: 10px 15px; font-size: 15px;">
                  <span style="text-transform: uppercase; color: white;">Shop now</span>
                </a>
              </div>
            </div>
          {% else %}
            <img src="{{ slide.image }}" alt="{{ slide.name }}" class="img-responsive" />
          {% endif %}
        </div>
      {% endfor %} 
    </div>
  </div>

  <div class="swiper-container gallery-thumbs">
    <div class="swiper-wrapper">
     {% for slide in slides %}
      <div class="swiper-slide" style="background-image:url({{slide.thumb}})"></div>
      {% endfor %} 
    </div>
  </div>
  <div class="swiper-pager">
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</div>

